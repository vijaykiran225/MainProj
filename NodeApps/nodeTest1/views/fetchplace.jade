    script(type='text/javascript').
      function validate()
      {
      var crop= document.getElementById('crop');
      var cr=crop.options[crop.selectedIndex].value;
      if (cr=="select")
      {
      document.getElementById('warning').className="alert alert-danger";
      document.getElementById('content').innerHTML="Please Select a Crop!!";
      return false;
      }
      return true;
      }
